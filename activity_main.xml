<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/untitled">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="95dp"
            android:layout_height="104dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:onClick="dropin"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="95dp"
            android:layout_height="104dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:onClick="dropin"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="95dp"
            android:layout_height="104dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:onClick="dropin"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="95dp"
            android:layout_height="104dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:onClick="dropin"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="95dp"
            android:layout_height="104dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:onClick="dropin"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="95dp"
            android:layout_height="104dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:onClick="dropin"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/iv8"
            android:layout_width="95dp"
            android:layout_height="104dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:onClick="dropin"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/iv9"
            android:layout_width="95dp"
            android:layout_height="104dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:onClick="dropin"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="95dp"
            android:layout_height="104dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:onClick="dropin"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0" />
    </android.support.v7.widget.GridLayout>

    <LinearLayout
        android:id="@+id/play_again_layout"
        android:layout_width="224dp"
        android:layout_height="148dp"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_final"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btn_final"
            android:layout_width="150dp"
            android:layout_height="69dp"
            android:layout_marginTop="6dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Play Again"
            android:onClick="play_again"
            android:textColor="@android:color/background_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="A Hacker's Studio App  by  Ankush"
            android:textStyle="normal|bold|italic" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="91dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Red :"
        android:textColor="@android:color/holo_red_light"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="91dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="106dp"
        android:text="Green : "
        android:textColor="@android:color/holo_green_light"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/record_0"
        android:layout_width="86dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-106dp"
        android:layout_toEndOf="@+id/textView4"
        android:hint="0"
        android:textColor="@android:color/holo_green_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/record_1"
        android:layout_width="86dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView"
        android:hint="0"
        android:textColor="@android:color/holo_red_light"
        android:textSize="24sp" />

</RelativeLayout>